<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gabriel Kummer"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="50">

            <TextView
                android:id="@+id/txt_calculTemp"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:editable="false"
                android:maxLength="20"
                android:textColor="@color/gray"
                android:gravity="right"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/txt_calculResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:gravity="right"
                android:paddingRight="20dp"
                android:textSize="40sp"
                android:maxLength="15">

            </TextView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:orientation="horizontal"
                android:layout_marginTop="377dp"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/bt_sept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_huit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_neuf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_divi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:minWidth="100dp"
                    android:maxWidth="100dp"
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#dddddd"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:width="40dp">
                </Button>

                <Button
                    android:id="@+id/bt_quatre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>


                <Button
                    android:id="@+id/bt_cinq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_fois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:minWidth="100dp"
                    android:maxWidth="100dp"
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#dddddd"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:width="40dp">
                </Button>

                <Button
                    android:id="@+id/bt_un"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_deux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_trois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_moin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:minWidth="100dp"
                    android:maxWidth="100dp"
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#dddddd"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:width="40dp">
                </Button>

                <Button
                    android:id="@+id/bt_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2">
                </Button>

                <Button
                    android:id="@+id/bt_virgule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="#bbbbbb"
                    android:layout_margin="3dp"
                    android:height="90dp">
                </Button>

                <Button
                    android:id="@+id/bt_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:minWidth="100dp"
                    android:maxWidth="100dp"
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#dddddd"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:width="40dp">
                </Button>

                <Button
                    android:id="@+id/bt_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#ff5e5b"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2">
                </Button>

                <Button
                    android:id="@+id/bt_egal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="25sp"
                    android:textColor="#333333"
                    android:backgroundTint="#00cecb"
                    android:layout_margin="3dp"
                    android:height="90dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2">
                </Button>


            </GridLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>